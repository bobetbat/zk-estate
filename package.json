{
  "name": "root",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "start:front": "cd packages/front && yarn start",
    "start:hardhat": "cd packages/contracts && yarn start",
    "contract:compile": "cd packages/contracts && yarn compile",
    "contract:test": "cd packages/contracts && yarn test",
    "contract:deploy:local": "cd packages/contracts && yarn deploy:local",
    "changelog": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s",
    "commit": "git-cz -S",
    "prepare": "husky install",
    "dev": "yarn start:hardhat && yarn contract:compile && yarn contract:deploy:local && yarn start:front"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "husky": "^8.0.0",
    "lerna": "^4.0.0"
  }
}
